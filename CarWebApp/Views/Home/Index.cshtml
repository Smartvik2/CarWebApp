@model IEnumerable<CarWebApp.Models.Car>

@{
    ViewData["Title"] = "Available Cars";
}

<h2 class="mb-4">Available Cars</h2>

@if (!Model.Any())
{
    <p>No cars are currently available. Please check back later.</p>
}
else
{
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    @{
                        var img = car.Images.FirstOrDefault()?.FilePath ?? "/images/no-image.png";
                    }
                    <img src="@img" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@car.Make @car.Model" />
                    <div class="card-body">
                        <h5>@car.Make @car.Model</h5>
                        <p><strong>₦@car.Price</strong></p>
                        <p>@car.Description</p>
                        <small class="text-muted">Year: @car.Year</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
