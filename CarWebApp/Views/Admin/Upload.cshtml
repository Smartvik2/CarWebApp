@model CarWebApp.Models.Car
@{
    ViewData["Title"] = "Upload Car";
}

<h2>Upload Car</h2>

<form asp-action="Upload" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Make" class="form-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Upload Images</label>
        <input type="file" name="images" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Success</div>
}
@if (ViewBag.Warning != null)
{
    <div class="alert alert-warning mt-3">@ViewBag.Warning</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
